{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
  },
  "include": [
    "vite.config.ts",
    "server/**/*.ts",
    "service/**/*.ts",
    "api/**/*.ts",
    "service/**/*.d.ts",
  ],
}
